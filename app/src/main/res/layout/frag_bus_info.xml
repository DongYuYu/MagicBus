<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    tools:context=".businformation.BusInfoFrag">


    <TextView
        android:id="@+id/tvBusid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="134dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintEnd_toEndOf="@+id/tvBusregistrationno"
        app:layout_constraintStart_toStartOf="@+id/tvBusregistrationno"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBusregistrationno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintEnd_toEndOf="@+id/tvBustype"
        app:layout_constraintStart_toStartOf="@+id/tvBustype"
        app:layout_constraintTop_toBottomOf="@+id/tvBusid" />

    <TextView
        android:id="@+id/tvBustype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintEnd_toEndOf="@+id/tvBusDeparturetime"
        app:layout_constraintStart_toStartOf="@+id/tvBusDeparturetime"
        app:layout_constraintTop_toBottomOf="@+id/tvBusregistrationno" />

    <TextView
        android:id="@+id/tvBusDeparturetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="193dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintEnd_toEndOf="@+id/tvJournyduration"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBustype" />

    <TextView
        android:id="@+id/tvJournyduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintEnd_toEndOf="@+id/tvFare"
        app:layout_constraintStart_toStartOf="@+id/tvFare"
        app:layout_constraintTop_toBottomOf="@+id/tvBusDeparturetime" />

    <TextView
        android:id="@+id/tvFare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJournyduration" />

    <TextView
        android:id="@+id/tvBoardingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintStart_toStartOf="@+id/tvFare"
        app:layout_constraintTop_toBottomOf="@+id/tvFare" />

    <TextView
        android:id="@+id/tvDropingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:text="TextView"
        android:textColor="@color/icons"
        app:layout_constraintStart_toStartOf="@+id/tvBoardingTime"
        app:layout_constraintTop_toBottomOf="@+id/tvBoardingTime" />

    <Button
        android:id="@+id/btn_BusSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="44dp"
        android:background="@color/primary_text"
        android:text="SELECTED SEAT"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvBusDeparturetime"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>