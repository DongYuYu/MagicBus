<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".authentication.password.forgotpassword.ForgotPasswordFrag">

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="216dp"
        android:background="@color/primary"
        android:gravity="center"
        android:text="Submit"
        android:textAlignment="center"
        android:textColor="@color/icons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etMobileNum" />

    <TextView
        android:id="@+id/tv_forgotPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="89dp"
        android:fontFamily="sans-serif-black"
        android:text="Forgot Password?"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/etMobileNum"
        app:layout_constraintStart_toStartOf="@+id/ivPadlock"
        app:layout_constraintTop_toBottomOf="@+id/ivPadlock" />

    <EditText
        android:id="@+id/etMobileNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:backgroundTint="@color/divider"
        android:backgroundTintMode="multiply"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:textColor="@color/icons"
        android:textColorHint="@color/icons"
        app:layout_constraintBottom_toTopOf="@+id/buttonSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPS" />

    <ImageView
        android:id="@+id/ivPadlock"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="33dp"
        android:src="@drawable/lock_icon"
        app:layout_constraintBottom_toTopOf="@+id/tv_forgotPS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>